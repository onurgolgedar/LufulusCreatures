function sync_localstats() {
	with (objPlayer) {
		maxHp = global.maxHp
		maxMana = global.maxMana
		criticalChance = global.criticalChance
		physicalPower = global.physicalPower
		magicalPower = global.magicalPower
		armor = global.armor
		resistance = global.resistance
		attackSpeed = global.attackSpeed
		activeAttackSpeed = attackSpeed
		damageReduction = global.damageReduction
		criticalFactor = global.criticalFactor
	}


}
